<?xml version="1.0" encoding="utf-8" ?>
<log4net>
    <root>
        <level value="ERROR" />
        <appender-ref ref="LogFileAppender" />
        <appender-ref ref="console" />
    </root>

    <logger name="MassTransit">
        <level value="INFO" />
    </logger>

    <logger name="MassTransit.QuartzIntegration">
        <level value="INFO" />
    </logger>

    <logger name="MassTransit.Turnout">
        <level value="DEBUG" />
    </logger>

    <appender name="console" type="log4net.Appender.ConsoleAppender, log4net">
        <layout type="log4net.Layout.PatternLayout,log4net">
            <param name="ConversionPattern" value="%d{HH:mm:ss,fff} %-5p %m%n" />
        </layout>
    </appender>

    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value="MassTransit.Tests-" />
        <appendToFile value="true" />
        <datePattern value="yyyyMMdd.lo\g" />
        <rollingStyle value="Composite" />
        <maxSizeRollBackups value="3" />
        <maximumFileSize value="10MB" />
        <preserveLogFileNameExtension value="true" />
        <countDirection value="1" />
        <param name="StaticLogFileName" value="false" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy-MM-dd hh:mm:ss.fff} %5level %m%n" />
        </layout>
    </appender>
</log4net>